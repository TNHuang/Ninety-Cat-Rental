<h1>Make a new Cat Rental Requst!</h1>

<form action="/cat_rental_requests/" method="POST">
  <label for="cat">Choose a Cat</label>
  <select id="cat" name="cat_rental_request[cat_id]">
    <option value="">no cat selected</option>

    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"
        <%= "selected" if cat.id == @cat_rental_request.cat_id %>
      ><%= cat.name %></option>
    <% end %>
  </select>

  <br>
  <label for="start_date">Start Date</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]"
      value="<%= @cat_rental_request.start_date %>" >

  <br>
  <label for="end_date">End Date</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]"
      value="<%= @cat_rental_request.end_date %>" >


  <input type="submit" value="Create a Rental Request!">
</form>