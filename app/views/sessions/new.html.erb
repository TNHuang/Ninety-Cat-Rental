<h1>Log in!</h1>

<% if session[:errors] %>
  <pre><%= flash[:errors] %></pre>
<% end %>

<form action="/session" method="POST">
  <br>
  <label for="user.user_name">Username</label>
  <input type="text" id="user.user_name"
        name="user[user_name]" value="<%= @user.user_name %>"></input>

  <br>
  <label for="user.password">Password</label>
  <input type="password" id = "user.password"
        name="user[password]"></input>

<input type="submit">Log in!</input>
</form>